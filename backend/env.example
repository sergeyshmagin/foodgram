# =============================================================================
# Foodgram Environment Variables
# =============================================================================
# Скопируйте этот файл в .env и заполните своими значениями

# Django настройки
DEBUG=False
SECRET_KEY=django-insecure-change-this-to-secure-random-key-for-production
DJANGO_SETTINGS_MODULE=foodgram.settings.production
ALLOWED_HOSTS=foodgram.freedynamicdns.net,89.169.174.76,localhost,127.0.0.1

# База данных PostgreSQL
POSTGRES_DB=foodgram
POSTGRES_USER=foodgram_user
POSTGRES_PASSWORD=secure_database_password_change_me
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_or_leave_empty

# MinIO S3 Storage
MINIO_ACCESS_KEY=foodgram_minio
MINIO_SECRET_KEY=secure_minio_password_change_me
MINIO_BUCKET_NAME=foodgram
MINIO_USE_HTTPS=False
MINIO_HOST=minio

# Email настройки (опционально)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@foodgram.freedynamicdns.net

# Безопасность (для HTTPS)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Домен
DOMAIN_NAME=foodgram.freedynamicdns.net 