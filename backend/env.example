# Пример файла переменных окружения для Foodgram
# Скопируйте этот файл в .env и заполните своими значениями

# Django настройки
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# База данных PostgreSQL
POSTGRES_DB=foodgram_dev
POSTGRES_USER=foodgram_user
POSTGRES_PASSWORD=foodgram_password
DB_HOST=localhost  # Для разработки с docker-compose.dev.yml
DB_PORT=5432

# Redis
REDIS_HOST=localhost  # Для разработки с docker-compose.dev.yml
REDIS_PORT=6379
USE_REDIS=True

# MinIO S3
MINIO_HOST=localhost  # Для разработки с docker-compose.dev.yml
MINIO_PORT=9000
MINIO_ACCESS_KEY=foodgram_minio
MINIO_SECRET_KEY=foodgram_minio_password
MINIO_BUCKET_NAME=foodgram

# Email настройки
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Настройки окружения
DJANGO_SETTINGS_MODULE=foodgram.settings.development 