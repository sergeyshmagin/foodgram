# =============================================================================
# Foodgram Production Environment Variables
# =============================================================================
# Copy this file to .env and modify values for your production setup

# =============================================================================
# Django Settings
# =============================================================================
DEBUG=False
SECRET_KEY=django-insecure-change-this-to-a-secure-random-key-for-production
DJANGO_SETTINGS_MODULE=foodgram.settings.production
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.0.10,foodgram.local

# =============================================================================
# Database Settings (PostgreSQL)
# =============================================================================
POSTGRES_DB=foodgram
POSTGRES_USER=foodgram_user
POSTGRES_PASSWORD=secure_database_password_change_me
DB_HOST=db
DB_PORT=5432

# =============================================================================
# Redis Settings
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password_or_leave_empty

# =============================================================================
# MinIO S3 Storage Settings
# =============================================================================
MINIO_ACCESS_KEY=foodgram_minio
MINIO_SECRET_KEY=secure_minio_password_change_me
MINIO_BUCKET_NAME=foodgram
MINIO_USE_HTTPS=False
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
# External endpoint for file URLs (optional, for reverse proxy)
MINIO_EXTERNAL_ENDPOINT=

# =============================================================================
# Email Settings (Optional, for password reset etc.)
# =============================================================================
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@foodgram.ru

# =============================================================================
# Security Settings
# =============================================================================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# =============================================================================
# Server Ports
# =============================================================================
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# Domain Settings
# =============================================================================
DOMAIN_NAME=foodgram.local

# =============================================================================
# Production Network Configuration
# =============================================================================
# Uncomment and modify for your production network
# DB_HOST=192.168.0.4
# REDIS_HOST=192.168.0.3
# MINIO_HOST=192.168.0.4
# MINIO_EXTERNAL_ENDPOINT=192.168.0.4:9000 